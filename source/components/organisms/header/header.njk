{#- header.njk -#}

{#- Component class -#}
{% set class = 'header' %}

{#- Import used atoms & molecules -#}
{% from "atoms/menu/menu.njk" import menu as menu %}

{#- Template content -#}
{% macro header() -%}
<header class="{{ class }}">
  <div class="{{ class + '__container'}}">
    {{ menu(
      {
        'Home' : '#',
        'About Me' : '#',
        'My work' : '#'
      }
    ) }}
  </div>
</header>
{%- endmacro %}
